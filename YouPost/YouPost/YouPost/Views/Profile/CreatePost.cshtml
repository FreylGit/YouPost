@using YouPost.Models.ViewModels
@model NewPostModel
@{
    
}
<div class="container">
    <div class="row">
        <h1>Создание поста</h1>
    </div>

 <div class="row justify-content-center">
     <div class="col-7">
<form method="post">
   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   <div class="form-floating">
       <input asp-for="Title" class="form-control"  aria-required="true" />
       <label asp-for="Title" class="form-label"></label>
        <span asp-validation-for="Title" class="text-danger"></span>
       </div>
       <div class="form-floating mt-3">
       <textarea asp-for="Text" class="form-control" aria-label="With textarea"></textarea>
       <label asp-for="Text" class="form-label"></label>
        <span asp-validation-for="Text" class="text-danger"></span>
       </div>
       <div class="btn-group mt-3">
           <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Отмена</a>
       <button type="submit" class="btn  btn-primary">Создать</button>
       </div>
       
</form>
     </div>

 </div>

</div>